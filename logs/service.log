import logging
import os
from logging.handlers import RotatingFileHandler

# 1. Create Logs folder if it doesn't exist
if not os.path.exists("logs"):
    os.makedirs("logs")

# 2. Configure Professional Logging
logger = logging.getLogger("FirstVerifyAI")
logger.setLevel(logging.DEBUG)

# File Handler: Writes to /logs/service.log (Rotates after 5MB)
file_handler = RotatingFileHandler("logs/service.log", maxBytes=5*1024*1024, backupCount=3)
file_handler.setFormatter(logging.Formatter('%(asctime)s - %(levelname)s - %(message)s'))

# Console Handler: Writes to the black screen
console_handler = logging.StreamHandler()
console_handler.setFormatter(logging.Formatter('%(levelname)s: %(message)s'))

logger.addHandler(file_handler)
logger.addHandler(console_handler)

